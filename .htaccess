ErrorDocument 404 /404.php # Page not found / 404 set-up
RewriteEngine on # mod_rewrite starts here
RewriteCond %{REQUEST_FILENAME}\.php -f # Check for file in directory with .php extension
RewriteRule ^(.*)$ $1.php [NC,L] # Here we actually show the page that has the .php extension
DirectoryIndex /index.php # Changing deafult homepage name from index to custom one



